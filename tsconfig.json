{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "sourceMap": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "quagga": [
                "node_modules/quagga/type-definitions/quagga.d.ts"
            ],
            "import-png": [
                "types/import-png"
            ],
        },
        "typeRoots": [
            "types"
        ],
    },
    "include": [
        "**/*.test.ts",
        "**/*.test.tsx",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        // "**/*.test.ts",
        // "**/*.test.tsx",
    ]
}